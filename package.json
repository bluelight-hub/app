{
  "name": "bluelight-hub",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "pnpm -r dev",
    "build": "pnpm -r build",
    "generate-api": "pnpm -r generate-api",
    "test": "pnpm -r test",
    "test:ui": "pnpm -r test:ui",
    "test:cov": "pnpm -r test:cov",
    "docs:html": "asciidoctor -r asciidoctor-diagram -a mmdc=node_modules/.bin/mmdc docs/index.adoc -o dist/docs/index.html",
    "docs:pdf": "asciidoctor-pdf -r asciidoctor-diagram -a mmdc=node_modules/.bin/mmdc -s docs/styles/bluelight-pdf.css docs/index.adoc -o dist/docs/bluelight-hub-architecture.pdf",
    "docs:build": "mkdir -p dist/docs && pnpm docs:html && pnpm docs:pdf",
    "docs:deploy": "pnpm docs:build",
    "prepare": "husky"
  },
  "packageManager": "pnpm@10.5.2",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@nestjs/core",
      "@openapitools/openapi-generator-cli",
      "@swc/core",
      "esbuild"
    ]
  },
  "devDependencies": {
    "@mermaid-js/mermaid-cli": "^11.4.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.1",
    "@softwaretechnik/dbml-renderer": "^1.0.30",
    "bpmn-js-cmd": "^0.4.0",
    "husky": "^9.1.7",
    "puppeteer": "^24.6.1",
    "semantic-release": "^24.2.3",
    "semantic-release-gitmoji": "^1.6.8"
  },
  "dependencies": {
    "consola": "^3.4.2"
  }
}
