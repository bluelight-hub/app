{
  "name": "@bluelight-hub/frontend",
  "private": true,
  "version": "1.0.0-alpha.21",
  "type": "module",
  "scripts": {
    "dev": "tauri dev",
    "dev:vite": "vite",
    "build": "tsc --skipLibCheck --noEmit && vite build",
    "lint": "eslint .",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\" \"*.{json,js,ts}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css}\" \"*.{json,js,ts}\"",
    "preview": "vite preview",
    "tauri": "tauri",
    "test": "vitest run",
    "test:update": "vitest --update",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:cov": "echo '⚠️  - Frontend test coverage is disabled' # vitest run --coverage",
    "test:watch": "vitest watch"
  },
  "dependencies": {
    "@bluelight-hub/shared": "workspace:*",
    "@fontsource-variable/inter": "^5.2.6",
    "@fontsource-variable/montserrat": "^5.2.6",
    "@fontsource-variable/nunito": "^5.2.6",
    "@tailwindcss/vite": "^4.1.11",
    "@tanstack/react-query": "5.83.0",
    "@tanstack/react-query-devtools": "5.83.0",
    "@tauri-apps/api": "^2.7.0",
    "@tauri-apps/plugin-http": "^2.5.1",
    "@tauri-apps/plugin-store": "^2.3.0",
    "consola": "^3.4.2",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-icons": "^5.5.0",
    "tailwind-merge": "3.3.1",
    "tailwindcss": "^4.1.11",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@tauri-apps/cli": "^2.7.1",
    "@types/jest": "^30.0.0",
    "@types/node": "24.1.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react-swc": "^3.11.0",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "eslint": "^9.32.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "8.38.0",
    "vite": "^7.0.6",
    "vitest": "^3.2.4"
  }
}
