#!/usr/bin/env node
const {spawn} = require('child_process');
const path = require('path');

const mmdcPath = path.join(__dirname, 'node_modules/.bin/mmdc');
const args = process.argv.slice(2);

// FÃ¼ge die no-sandbox Optionen hinzu
const child = spawn(
    mmdcPath,
    [...args, '--puppeteerConfigFile', path.join(__dirname, 'puppeteer.json')],
    {
        stdio: 'inherit'
    }
);

child.on('exit', (code) => {
    process.exit(code);
});
